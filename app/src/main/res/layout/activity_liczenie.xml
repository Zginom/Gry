<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.daniel.gry.Liczenie" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rachunek"
        android:textSize="50sp"
        android:textColor="@color/Red"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wynik"
        android:textSize="30sp"
        android:textColor="@color/Red"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TableRow
            android:gravity="center">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/siedem"
                android:text="7"
                android:textSize="30sp"
                android:onClick="add7"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/osiem"
                android:text="8"
                android:textSize="30sp"
                android:onClick="add8"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dziewiec"
                android:text="9"
                android:textSize="30sp"
                android:onClick="add9"
                />
        </TableRow>


        <TableRow
            android:gravity="center">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cztery"
                android:text="4"
                android:textSize="30sp"
                android:onClick="add4"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/piec"
                android:text="5"
                android:textSize="30sp"
                android:onClick="add5"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/szesc"
                android:text="6"
                android:textSize="30sp"
                android:onClick="add6"
                />
        </TableRow>


        <TableRow
            android:gravity="center">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jeden"
                android:text="1"
                android:textSize="30sp"
                android:onClick="add1"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dwa"
                android:text="2"
                android:textSize="30sp"
                android:onClick="add2"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/trzy"
                android:text="3"
                android:textSize="30sp"
                android:onClick="add3"
                />
        </TableRow>


        <TableRow
            android:gravity="center">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cofnij"
                android:text="C"
                android:textSize="30sp"
                android:onClick="cofnij"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/zero"
                android:text="0"
                android:textSize="30sp"
                android:onClick="add0"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/licz"
                android:text="-&gt;"
                android:textSize="30sp"
                android:onClick="licz"
                />
        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/liczenieStart"
        android:text="@string/start"
        android:textColor="@color/Purple"
        android:textSize="30sp"
        android:onClick="liczenieStart"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="50sp"
        android:textColor="@color/Red"
        android:id="@+id/licznik"
        />

</LinearLayout>
